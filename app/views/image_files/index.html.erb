<%- model_class = ImageFile -%>
<%- model_class_trans = ImageFileTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_trans.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:lat) %></th>
      <th><%= model_class.human_attribute_name(:lon) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @image_files.each do |image_file| %>
      <tr>
        <td><%= link_to image_file.name, image_file_path(image_file) %></td>
        <td><%= image_file.year %></td>
        <td><%= image_file.lat %></td>
        <td><%= image_file.lon %></td>
        <td><%= image_tag image_file.file.url(:thumb) if image_file.file_file_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_image_file_path(image_file), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_file_path(image_file),
                      :method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_image_file_path,
              :class => 'btn btn-primary' %>
</div>
