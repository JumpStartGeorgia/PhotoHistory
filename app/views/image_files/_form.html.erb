<%= semantic_form_for @image_file, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_messages %>

  <% @image_file.image_file_translations.sort{|x,y| x.locale <=> y.locale}.each do |trans| %>
		<%= f.fields_for :image_file_translations, trans do |translation| %>

			<div id="form-<%= trans.locale %>" class="multilanguage">
				<h3><%= t("app.language.#{trans.locale}") %></h3>

				<%= translation.input :name %>
				<%= translation.input :description, :input_html => {:rows => 4} %>
				<%= translation.hidden_field :locale , :value => trans.locale %>
			</div>

		<% end %>
	<% end %>

		<%= f.input :year, :as => :string, :input_html => {:size => 5, :maxlength => 4} %>
		<%= f.input :lat, :input_html => {:size => 20, :maxlength => 15} %>
		<%= f.input :lon, :input_html => {:size => 20, :maxlength => 15} %>
		<%= f.input :district, :as => :select, :collection => district_collection %>
		<%= f.input :special, :as => :select, :collection => special_collection %>
		<%= f.input :file, :as => :file %>
		<div class="control-group">
			<div class="controls">
				<%= image_tag @image_file.file.url if @image_file.file_file_name %>
			</div>
		</div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('helpers.links.reset'), :name => :reset %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pairings_path, :class => 'btn btn-mini btn-warning' %>
  </div>

<% end %>
