<%= semantic_form_for([:admin,@location], :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_messages %>

	<%= f.input :type_id, :as => :select, :collection => Location::TYPES %>

  <% @location.location_translations.sort{|x,y| x.locale <=> y.locale}.each do |trans| %>
	  <%= f.fields_for :location_translations, trans do |translation| %>

		  <div id="form-<%= trans.locale %>" class="multilanguage">
			  <h3><%= t("app.language.#{trans.locale}") %></h3>

			  <%= translation.input :name, :input_html => {:size => 75} %>
			  <%= translation.hidden_field :locale , :value => trans.locale %>
		  </div>

	  <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('helpers.links.reset'), :name => :reset %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_locations_path, :class => 'btn btn-mini btn-warning' %>
  </div>

<% end %>

