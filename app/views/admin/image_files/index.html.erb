<%- model_class = ImageFile -%>
<%- model_class_trans = ImageFileTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_image_file_path,
              :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_trans.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:source) %></th>
      <th><%= model_class_trans.human_attribute_name(:photographer) %></th>
      <th><%= model_class.human_attribute_name(:district_id) %></th>
      <th><%= model_class.human_attribute_name(:place_id) %></th>
      <th><%= model_class.human_attribute_name(:event_ids) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @image_files.each do |image_file| %>
      <tr>
        <td><%= link_to image_file.name, admin_image_file_path(image_file) %></td>
        <td><%= image_file.year %></td>
        <td><%= image_file.source %></td>
        <td><%= image_file.photographer %></td>
        <td><%= image_file.district_name %></td>
        <td><%= image_file.place_name %></td>
        <td><%= image_file.events.map{|x| x.name}.join(', ') if image_file.events.present? %></td>
        <td><%= image_tag image_file.file.url(:thumb) if image_file.file_file_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_image_file_path(image_file), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_image_file_path(image_file),
                      :method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


