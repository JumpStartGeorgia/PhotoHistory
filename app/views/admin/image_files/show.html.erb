<%- model_class = ImageFile -%>
<%- model_class_trans = ImageFileTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_image_files_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_image_file_path(@image_file), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_image_file_path(@image_file),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
</div>

  <p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
  <%= @image_file.name %></p>
  <p><strong><%= model_class_trans.human_attribute_name(:description) %>:</strong>
  <%= simple_format @image_file.description %></p>
  <p><strong><%= model_class.human_attribute_name(:year) %>:</strong>
  <%= @image_file.year %></p>
  <p><strong><%= model_class.human_attribute_name(:lat) %>:</strong>
  <%= @image_file.lat %></p>
  <p><strong><%= model_class.human_attribute_name(:lon) %>:</strong>
  <%= @image_file.lon %></p>
  <p><strong><%= model_class.human_attribute_name(:district) %>:</strong>
  <%= @image_file.district %></p>
  <p><strong><%= model_class.human_attribute_name(:special) %>:</strong>
  <%= @image_file.special %></p>
  <p><strong><%= model_class.human_attribute_name(:file) %>:</strong>
  <br />
  <%= image_tag @image_file.file.url(:medium) if @image_file.file_file_name %>
  </p>


