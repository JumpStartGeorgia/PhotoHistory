<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= get_page_title.present? ? "#{get_page_title} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>

		<meta property="og:title" content="<%= get_page_title.present? ? "#{get_page_title} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %>" />
		<% if @pairing.present? && @pairing.description.present? %>
  		<meta property="og:description" content="<%= @pairing.description %>" />
    <% else %>
  		<meta property="og:description" content="<%= t('.og_description') %>" />
    <% end %>
		<meta property="og:type" content="non_profit" />
		<meta property="og:url" content="<%= current_url_no_querystring %>" />
		<% if @pairing.present? && @pairing.image_file1.present? && @pairing.image_file1.file_file_name.present? %>
			<meta property="og:image" content="<%= full_url(@pairing.image_file1.file.url(:thumb, false)) %>" />
    <% else %>
			<meta property="og:image" content="<%= full_url(image_path('share_photo.jpg')) %>" />
		<% end %>
		<meta property="og:site_name" content="<%= t('app.common.app_name') %>" />


    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "fonts_#{I18n.locale}", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

   <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.5/leaflet.css" />
   <!--[if lte IE 8]>
       <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.5/leaflet.ie.css" />
   <![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body <%= params[:controller] == "root" && params[:action] == "index" ? "id=black_background" : "" %>>
		<!-- facebook -->
		<div id="fb-root"></div>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to(t('app.common.app_name'), root_path(:locale => I18n.locale),:class=>"brand font")%>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			                <%= t('filters.location.header') %>
			                <b class="caret"></b>
			          </a>
			          <ul class="dropdown-menu">
		              <li <%= !params[:district].present? && !params[:special].present? ? "class=active" : '' %>>
	     		         <%= link_to t('filters.location.all'), root_path(update_params({:district => nil, :special => nil, :pairing => nil})) %>
							    </li>
                  <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><%= t('filters.location.districts.header') %></a>
                    <ul class="dropdown-menu">
                      <% @districts.each do |item| %>
					              <li <%= params[:district] == item.permalink ? "class=active" : '' %>>
			       		         <%= link_to item.name, root_path(update_params({:district => item.permalink, :pairing => nil, :special => nil})) %>
									      </li>
                      <% end %>                  
                    </ul>
                  </li>
                  <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><%= t('filters.location.special.header') %></a>
                    <ul class="dropdown-menu">
                      <% @special_areas.each do |item| %>
					              <li <%= params[:special] == item.permalink ? "class=active" : '' %>>
			       		         <%= link_to item.name, root_path(update_params({:special => item.permalink, :pairing => nil, :district => nil})) %>
									      </li>
                      <% end %>                  
                    </ul>
                  </li>

			          </ul>
			        </li>


			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			                <%= t('filters.time.header') %>
			                <b class="caret"></b>
			          </a>
			          <ul class="dropdown-menu">
		              <li <%= !params[:time].present? || params[:time] == t('filters.time.all') ? "class=active" : '' %>>
	     		         <%= link_to t('filters.time.all'), root_path(update_params({:time => t('filters.time.all'), :pairing => nil})) %>
							    </li>
                  <% t(:'filters.time.list').each_line do |item| %>
                    <% item.chomp! %>
			              <li <%= params[:time] == item ? "class=active" : '' %>>
			   		         <%= link_to item, root_path(update_params({:time => item, :pairing => nil})) %>
									  </li>
                  <% end %>                  
		              <li <%= params[:time].present? && params[:time] == t('filters.time.unknown') ? "class=active" : '' %>>
	     		         <%= link_to t('filters.time.unknown'), root_path(update_params({:time => t('filters.time.unknown'), :pairing => nil})) %>
							    </li>
			          </ul>
			        </li>
            </ul>

	          <ul class="nav pull-right">
		          <% if user_signed_in? %>
				        <li class="dropdown">
				          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				                <%= current_user.email %>
				                <b class="caret"></b>
				          </a>
				          <ul class="dropdown-menu">
                    <% if current_user.role?(User::ROLES[:user]) %>
                      <li><%= link_to ImageFile.model_name.human, admin_image_files_path  %></li>
                      <li><%= link_to Pairing.model_name.human, admin_pairings_path  %></li>
                      <li><%= link_to Location.model_name.human, admin_locations_path  %></li>
                    <% end %>
                    <% if current_user.role?(User::ROLES[:admin]) %>
						          <li>
				   		         <%= link_to User.model_name.human, admin_users_path %>
										  </li>
                    <% end %>
						        <li>
				 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
										</li>
				          </ul>
				        </li>
		          <% end %>
              <li><%= link_to t('.menu_about'), about_path, :id => 'menu_about', :class => 'fancybox' %></li>
							<% I18n.available_locales.each do |locale| %>
								<% if locale != I18n.locale %>
									<li><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %></li>
								<% end %>
							<% end %>
	          </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

		<div id="wrapper">
		  <div class="container-fluid">
		    <div class="content">
		      <div class="row-fluid">
		         <div class="span12">
							<% flash.each do |key, msg| %>
								<div class="alert <%= flash_translation(key) %> fade in">
									<a href="#" data-dismiss="alert" class="close">Ã—</a>
									<%= msg %>
								</div>
							<% end %>


							<% if content_for?(:title) %>
								<div class="page-header">
								  <div class="block">
			              <h1>
										  <%= yield(:title) %>
									  </h1>
									</div>
								</div>
							<% end %>

	            <%= yield %>
	          </div><!--/span-->
		      </div><!--/row-fluid-->
		    </div><!--/content-->
		   </div> <!-- /container -->
		</div><!--/wrapper-->

    <div class="push"><!--//--></div>

    <footer class="clear">
      <div class="inner">
			  <div id="left">&copy; 2013</div>
		    <div id="middle">
				  &nbsp;
			  </div>
			  <div id="right" class="clear">
				  <ul>
					  <li id="js_link_text">
						  <%= t(".js_link_text") %>:
					  </li>
					  <li id="js_logo">
						  <%= link_to(image_tag("jumpstart-logo.png"), "http://www.jumpstart.ge", :target => "_blank",
								  :title => t(".js_link_title")	) %>
					  </li>
				  </ul>
			  </div>
		  </div>
    </footer>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="http://cdn.leafletjs.com/leaflet-0.5/leaflet.js"></script>
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
			<!-- insert google analytics for production site here -->
		<% elsif Rails.env.staging? %>
			<!-- insert google analytics for staging site here -->
		<% end %>

  </body>
</html>
