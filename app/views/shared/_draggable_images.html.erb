<% if @pairing %>

  <div id="photo_container">
    <div class="inner">

      <div class="controls left">
        <%= link_to image_tag('left_arrow.png') + image_tag('left_hover_arrow.png'), previous_path(@pairing.id, @param_options) %>
      </div>

      <div class="photo">
        <div class="item">
          <%= image_tag @pairing.image_file1.file.url(:large), :class => "layer1", :style => "width: #{@pairing.image_file1.image_width(:large)}px;" %>
          <div class="layer2">
            <%= image_tag @pairing.image_file2.file.url(:large) %>
          </div>
          <div class="overlay">
            <div class="draggable"></div>
          </div>
          <div class="row-fluid" id="photo_years">
            <div class="span4" id="image_left_year">
              <%= @pairing.image_file1.year_formatted %>
              <%= link_to t("helpers.links.edit"),
                          edit_admin_image_file_path(@pairing.image_file1_id), :class => 'btn btn-mini' %>
            </div>
            <div class="span4" id="image_count">
              <%= "#{@pairing_index} of #{@pairing_count}" %>
            </div>
            <div class="span4" id="image_right_year">
              <%= @pairing.image_file2.year_formatted %>
              <%= link_to t("helpers.links.edit"),
                          edit_admin_image_file_path(@pairing.image_file2_id), :class => 'btn btn-mini' %>
            </div>
          </div>
        </div>
      </div>

      <div class="controls right">
        <%= link_to image_tag('right_arrow.png') + image_tag('right_hover_arrow.png'), next_path(@pairing.id, @param_options) %>
      </div>

    </div>
  </div>

  <div id="photo_title_social">
    <div class="row-fluid">
      <div class="span6">
        <h2><%= @pairing.title %></h2>
      </div>
      <div class="span6">
  			<div class="fb-like" data-href="<%= current_url_no_querystring %>" data-send="false" data-layout="button_count" data-width="auto" data-show-faces="false"></div>
        <div id="share" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            share+
          </a>
          <ul class="dropdown-menu">
            <li>
				      <%= link_to(image_tag("share_fb.png"),
							      "http://www.facebook.com/share.php?u=#{current_url_no_querystring}",
							      :title => "facebook",	:target => "_blank", :tabindex => "-1") %>
            </li>
            <li>
				      <%= link_to(image_tag("share_twitter.png"),
							      "https://twitter.com/share?url=#{current_url_no_querystring}", :title => "twitter",
							      :target => "_blank", :tabindex => "-1") %>
            </li>
            <li>
				      <%= link_to(image_tag("share_gplus.png"),
							      "https://plusone.google.com/_/+1/confirm?hl=en&url=#{current_url_no_querystring}", :title => "google+",
							      :target => "_blank", :tabindex => "-1") %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="photo_content_container">
    <div class="row-fluid">
      <div class="span6" id="image_text">
        <div class="pull-right">
          <%= link_to t("helpers.links.edit"),
                      edit_admin_pairing_path(@pairing), :class => 'btn btn-mini' %>
        </div>
    
        <%= simple_format @pairing.description %>

        <div id="image_sources">
          <h3><%= t('.source_header') %></h3>
          <span><%= t('.left_image') %>:</span>
          <%= @pairing.image_file1.source.present? ? @pairing.image_file1.source : t('.unknown_source') %>

          <span><%= t('.right_image') %>:</span>
          <%= @pairing.image_file2.source.present? ? @pairing.image_file2.source : t('.unknown_source') %>
        </div>

        <div id="image_links">
          <% if @pairing.image_file1.present? && @pairing.image_file1.district_id.present? %>
            <span><%= t('activerecord.attributes.image_file.district') %>:</span>
            <%= link_to(@pairing.image_file1.district_name, root_path(update_params({:district => @pairing.image_file1.district_permalink, :pairing => nil, :special => nil}))) %>
		      <% end %>

          <% if @pairing.image_file1.present? && @pairing.image_file1.special_id.present? %>
            <span><%= t('activerecord.attributes.image_file.special') %>:</span>
            <%= link_to(@pairing.image_file1.special, root_path(update_params({:special => @pairing.image_file1.special_permalink, :pairing => nil, :district => nil}))) %>
		      <% end %>
        </div>

        <div id="image_comments">
          <h3><%= t('.comment_header') %></h3>
          <div class="fb-comments" data-href="<%= current_url_no_querystring %>" data-num-posts="5" data-width="457"></div>
        </div>
      </div>
      <div class="span6" id="map_container">
        <div id="map"></div>    
      </div>
    </div>
  </div>
<% else %>
  <p class="no_records">
    <%= t('.no_records') %>
  </p>
<% end %>

