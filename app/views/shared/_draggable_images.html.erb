<% if @pairing %>
  <div id="photo_container">
    <div class="item">
      <%= image_tag @pairing.image_file1.file.url(:large), :class => "layer1" %>
      <div class="layer2">
        <%= image_tag @pairing.image_file2.file.url(:large) %>
      </div>
      <div class="overlay">
        <div class="draggable"></div>
      </div>
    </div>

    <div class="row-fluid" id="photo_years">
      <div class="span4">
        <%= @pairing.image_file1.year_formatted %>
      </div>
      <div class="span4" style="text-align: center;">
        <p>
          <%= link_to '<-', previous_path(@pairing.id, @param_options) %>
          <%= "#{@pairing_index} of #{@pairing_count}" %>
          <%= link_to '->', next_path(@pairing.id, @param_options) %>
        </p>
      </div>
      <div class="span4">
        <%= @pairing.image_file2.year_formatted %>
      </div>
    </div>
  </div>

  <div id="photo_content_container">
    <div class="row-fluid">
      <div class="span6">
        <h2><%= @pairing.title %></h2>

        <%= simple_format @pairing.description %>

      </div>
      <div class="span6">
        <div id="map"></div>    
      </div>
    </div>
  </div>
<% else %>
  <p>
    <%= t('.no_records') %>
  </p>
<% end %>

