<%- model_class = Pairing -%>
<%- model_class_trans = PairingTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

  <p><strong><%= model_class_trans.human_attribute_name(:title) %>:</strong>
  <%= @pairing.title %></p>
  <p><strong><%= model_class_trans.human_attribute_name(:description) %>:</strong>
  <%= simple_format @pairing.description %></p>

  <div class="item">
    <%= image_tag @pairing.image_file1.file.url(:medium), :class => "layer1" %>
    <div class="layer2">
      <%= image_tag @pairing.image_file2.file.url(:medium) %>
    </div>
    <div class="overlay">
      <div class="draggable"></div>
    </div>
  </div>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pairings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pairing_path(@pairing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pairing_path(@pairing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
</div>
