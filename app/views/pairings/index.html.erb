<%- model_class = Pairing -%>
<%- model_class_trans = PairingTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<div class="form-actions">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pairing_path,
            :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_trans.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:image_file1_id) %></th>
      <th><%= model_class.human_attribute_name(:image_file2_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pairings.each do |pairing| %>
      <tr>
        <td><%= link_to pairing.title, pairing_path(pairing) %></td>
        <td>
          <%= pairing.image_file1.year if pairing.image_file1_id %>
          <br />
          <%= image_tag pairing.image_file1.file.url(:thumb) if pairing.image_file1_id && pairing.image_file1.file_file_name %>
        </td>
        <td>
          <%= pairing.image_file2.year if pairing.image_file2_id %>
          <br />
          <%= image_tag  pairing.image_file2.file.url(:thumb) if pairing.image_file2_id && pairing.image_file2.file_file_name %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pairing_path(pairing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pairing_path(pairing),
                      :method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

